FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    "pcorr.*"
    {
        solver          GAMG;
        smoother        GaussSeidel;
        cacheAgglomeration no;

        tolerance        0.01;
        relTol           0;
    }

    p
    {
        $pcorr;
        tolerance       1e-07;
        relTol          0.01;
    }

    pFinal
    {
        $p;
        tolerance       1e-07;
        relTol          0;
    }

    U
    {
        solver          smoothSolver;
        smoother        GaussSeidel;
        tolerance       1e-07;
        relTol          0.01;
    }

    UFinal
    {
        $U;
        tolerance       1e-07;
        relTol          0;
    }
}

PIMPLE
{
    correctPhi                  yes;
    nOuterCorrectors            3;
    nCorrectors                 1;
    nNonOrthogonalCorrectors    1;
    consistent                  yes;
    pRefCell                    0;
    pRefValue                   0;
}

relaxationFactors
{
    equations
    {
        ".*"            1;
        U               0.8;
        p               0.8;
        ".*Final"        1.0;
    }
}

